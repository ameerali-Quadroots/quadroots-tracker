<div class="container-fluid my-5">
  <div class="card shadow-sm">
    <div class="card-body">
      <h1 class="card-title mb-4 text-primary text-center">Your Edit Requests</h1>

      <% if @edit_requests.present? %>
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle text-center">
            <thead class="table-dark">
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Request Type</th>
                <th>Changing Time</th>
                <th>Reason</th>
                <th>Status</th>
                <th>Requested At</th>
                <th>Resolved At</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @edit_requests.each do |request| %>
                <tr>
                  <td class="align-middle"><%= request.user.name %></td>
                  <td class="align-middle"><%= request.user.email %></td>
                  <td class="align-middle"><%= request.request_type %></td>
                  <td class="align-middle">
                    <%= request.requested_clock_in.strftime("%b %d, %Y %I:%M %p") if request.requested_clock_in %>
                  </td>
<td class="align-middle">
  <div class="m-0 p-0"><%= simple_format(request.reason, {}, wrapper_tag: "span") %></div>
</td>                  <td class="align-middle">
                    <% status_class = case request.status
                                    when "pending" then "bg-warning text-dark"
                                    when "approved" then "bg-success"
                                    when "rejected" then "bg-danger"
                                    else "bg-secondary"
                                    end %>
                    <span class="badge rounded-pill <%= status_class %> px-3 py-2">
                      <%= request.status.capitalize %>
                    </span>
                  </td>
                  <td class="align-middle"><%= request.created_at.strftime("%b %d, %Y %I:%M %p") %></td>
                  <td class="align-middle">
                    <%= request.resolved_at ? request.resolved_at.strftime("%b %d, %Y %I:%M %p") : "-" %>
                  </td>
                  <td class="align-middle">
                    <% if !request.approved_by_manager  %>
                      <div class="d-flex justify-content-center gap-2">
                        <%= button_to approve_edit_request_path(request), method: :patch, class: "btn btn-outline-success btn-sm", data: { confirm: "Approve this request?" } do %>
                          ✅ Approve
                        <% end %>

                        <%= button_to reject_edit_request_path(request), method: :patch, class: "btn btn-outline-danger btn-sm", data: { confirm: "Reject this request?" } do %>
                          ❌ Reject
                        <% end %>
                      </div>
                    <% else %>
                      <span class="text-muted fst-italic">No actions</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="alert alert-info text-center" role="alert">
          <i class="bi bi-info-circle-fill me-2"></i>No edit requests yet.
        </div>
      <% end %>
    </div>
  </div>
</div>
