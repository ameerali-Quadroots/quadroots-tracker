<div class="container mt-5" style="max-width: 600px;">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h4 class="mb-0">Edit Profile</h4>
    </div>

    <div class="card-body">
      <%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |form| %>

        <% if @user.errors.any? %>
          <div class="alert alert-danger">
            <h5 class="mb-2">Please fix the following errors:</h5>
            <ul class="mb-0">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control", required: true %>
        </div>


        <hr class="my-4">

        <h5>Change Password</h5>

        <div class="mb-3">
          <%= form.label :current_password, "Current Password", class: "form-label" %>
          <%= form.password_field :current_password, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :password, "New Password", class: "form-label" %>
          
          <%= form.password_field :password, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :password_confirmation, class: "form-label" %>
          <%= form.password_field :password_confirmation, class: "form-control" %>
        </div>

        <div class="d-grid">
          <%= form.submit "Save Changes", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
